{
  "host": "omnimovies.com",
  "port": "PORT",
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "mysql": "MYSQLCONNSTR_localdb",
  "authentication": {
    "entity": "users",
    "service": "users",
    "secret": "APP_SETTINGS_SECRET_TOKEN",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://omnimovies.com",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    }
  }
}
